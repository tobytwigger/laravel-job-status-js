{
    "verbose": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
        "**/*.{js,ts,vue}",
        "!**/node_modules/**"
    ],
    "moduleNameMapper": {
        "~/(.*)": "<rootDir>/src/$1"
    },
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/../tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testEnvironment": "jsdom",
    "clearMocks": true
}